# Instagram Bot Environment Variables
# Copy this file to .env and fill in your actual values

# Instagram Messaging API Access Token (REQUIRED)
# Get this from Facebook Developer Console > Your App > Instagram > Generate Token
INSTAGRAM_ACCESS_TOKEN=YOUR_PAGE_ACCESS_TOKEN_HERE

# Facebook App Secret (REQUIRED)
# Get this from Facebook Developer Console > Your App > Settings > Basic > App Secret
INSTAGRAM_APP_SECRET=YOUR_APP_SECRET_HERE

# Instagram Business Account ID (REQUIRED)
# This is your Instagram Business Account ID (NOT Page ID)
# For get_voyage account: 17841473964575374
INSTAGRAM_BUSINESS_ACCOUNT_ID=17841473964575374

# Webhook Verification Token (OPTIONAL - has default)
# This is used for webhook verification
WEBHOOK_VERIFY_TOKEN=summy_webhook_verify_token_2025

# Flask Secret Key (OPTIONAL - will be auto-generated)
# Used for session management
FLASK_SECRET_KEY=your-secret-key-here 